{{#partial "content"}}
    <div class="row">
        <div class="col-md-6">
            <div class="Details">
                <h1>{{product.name}}</h1>
                <div class="row">
                   <div class="col-md-6">
                       <tr>
                           <td><h2 style="text-align:center;">Supplies Made </h2></td>
                       </tr>
                       <tr>
                           <td> Farmer </td>
                           <td> Product </td>
                           <td> Quantity </td>
                       </tr>
                       {{#each supplies}}
                           <tr>
                               <td>{{farmerName}}</td>
                               <td>{{productName}}</td>
                               <td>{{quantity}}</td>
                           </tr>
                       {{/each}}
                   </div>
                    <div class="col-md-6">
                        <tr>
                            <td><h2 style="text-align:center;">Orders Made </h2></td>
                        </tr>
                        <tr>
                            <td> Customer </td>
                            <td> Product </td>
                            <td> Quantity </td>
                        </tr>
                        {{#each orders}}
                            <tr>
                                <td>{{customerName}}</td>
                                <td>{{productName}}</td>
                                <td>{{quantity}}</td>
                            </tr>
                        {{/each}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class = "col-md-12">
                            <a class="btn btn-warning" href="/products/{{product.id}}/edit">Edit</a>
                            <a class="btn btn-warning" href="/products/{{product.id}}/delete">DELETE</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}