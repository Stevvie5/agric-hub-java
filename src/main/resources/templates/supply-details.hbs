{{#partial "content"}}
    <div class="row">
        <div class="col-md-6">
            <h3>Supply: {{supply.farmerName}} - {{supply.productName}}</h3>
            <p>Farmer: <a href="/farmers/{{supply.farmerId}}">{{supply.farmerName}}</a></p>
            <p>Product: <a href="/products/{{supply.productId}}">{{supply.productName}}</a></p>
            <p>Quantity: {{supply.quantity}} </p>
            <p>Price: KSHs {{supply.price}}</p>
            <p>Total Cost: KSHs {{supply.totalPrice}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class = "col-md-12">
                <a class="btn btn-warning" href="/supplies/{{supply.id}}/edit">Edit</a>
                <a class="btn btn-warning" href="/farmers/{{supply.farmerId}}/products/{{supply.productId}}/supplies/{{supply.id}}/delete">DELETE</a>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}