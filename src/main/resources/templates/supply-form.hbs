{{#partial "content"}}
    <div class="r-supplyform">
        <form action="/supplies/new">
            <h1>Fill in the supply form</h1>
            
            <div class="form-group">
                <label for="farmers">Select farmer</label>
                <select id="farmers" name="farmers">
                    {{#each farmers}}
                        <option value = {{id}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="product">Select product from farmer</label>
                <select id="product" name="product">
                    {{#each product}}
                        <option value = {{id}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="quantity">Enter quantity of product</label>
                <input type="text" id="quantity" class="quantity" placeholder="Quantity">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success">Submit</button>
            </div>
        </form>
    </div>
{{/partial}}